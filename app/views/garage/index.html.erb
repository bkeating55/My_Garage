<h1> My Vehicles </h1>
<%= link_to 'New Vehicle', new_garage_path %>
<br>
<table>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
  </tr>

  <% @garage.each do |garage| %>
  <tr>
    <td><%= garage.make %></td>
    <td><%= garage.model %></td>
    <td><%= garage.year %></td>
    <td><%= link_to 'View', garage_path(garage) %></td>
    <td><%= link_to 'Edit', edit_garage_path(garage) %></td>
    <td><%= link_to 'Sell Vehicle', garage_path(garage),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
